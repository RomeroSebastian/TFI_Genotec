@inject IStringLocalizer<Resource> localizer

<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <Authorizing>
                    <p>@localizer["app.authorizing"]</p>
                </Authorizing>
                <NotAuthorized>
                    <h1>@localizer["app.notauthorized.header"]</h1>
                    <p>@localizer["app.notauthorized.p"]</p>
                </NotAuthorized>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <p>@localizer["app.notfound"]</p>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
